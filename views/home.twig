    <div class="input-group">
      <input type="text" id="search_input" class="search_input input-lg form-control" placeholder="ami-XXXXXXXX" autofocus>
      <span class="input-group-btn">
        <button id="search_btn" class="search_btn btn btn-lg btn-primary" type="button">Show</button>
      </span>
    </div>
  </div>  
  <div class="container">
